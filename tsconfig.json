{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "components/*": ["./components/*"],
      "utils/*": ["./utils/*"],
      "styles/*": ["./styles/*"],
      "api/*": ["./api/*"],
      "lib/*": ["./lib/*"],
      "models/*": ["./models/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "models/user.js"],
  "exclude": ["node_modules"]
}
